<!DOCTYPE html>
<html lang="en">

@model Authentication.Models.RegisterViewModel

<body class="sign-in sign-up">
    <header class="not-signed-in d-flex flex-row justify-content-between fixed-top">
        <img src="~/images/logo.png"
             alt="logo">
    </header>
    <main>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <section class="register">
                        <h1 class="text-lg-center">Join Up</h1>
                        <form method="post" action="@Url.Action("Register", "Account")" novalidate>
                            @Html.HiddenFor(x => x.ReturnUrl)
                            <fieldset class="auth-info">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Name)
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required", aria_label = "email", aria_describedby = "name", placeholder = "Name" })
                                    <div class="invalid-feedback d-block">
                                        @Html.ValidationMessageFor(m => m.Name)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email)
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required", aria_label = "email", aria_describedby = "email", placeholder = "Email", type = "email" })
                                    <div class="invalid-feedback d-block">
                                        @Html.ValidationMessageFor(x => x.Email)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.DateOfBirth)
                                    @Html.TextBoxFor(x => x.DateOfBirth, new { @class = "form-control", required = "required", autocomplete = "off", placeholder = "Date of Birth" })
                                    <div class="invalid-feedback d-block">
                                        @Html.ValidationMessageFor(x => x.DateOfBirth)
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password)
                                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", required = "required", aria_label = "password", aria_describedby = "password", placeholder = "password", type = "password" })
                                    <div class="invalid-feedback d-block">
                                        @Html.ValidationMessageFor(x => x.Password)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.ConfirmPassword)
                                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", required = "required", aria_label = "confirmPassword", aria_describedby = "confirmPassword", placeholder = "Confirm Password", type = "password" })
                                    <div class="invalid-feedback d-block">
                                        @Html.ValidationMessageFor(x => x.ConfirmPassword)
                                    </div>
                                </div>

                                <button class="bttn bttn-primary bttn-submit" type="submit">Create Account</button>
                            </fieldset>
                        </form>
                        <p class="text-center">Already have an account<a href="@Url.Action("Login", "Account")">Sign In</a></p>
                    </section>
                </div>
            </div>
        </div>
    </main>
</body>

</html>

@section Scripts {
    <script>
        $('document').ready(function () {
            $('#DateOfBirth').datepicker({ dateFormat: 'dd/mm/yy' });
        })
    </script>
}




